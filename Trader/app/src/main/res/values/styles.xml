<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/colorButton</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="UpDownButton" parent="CustomButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="ApplyButton" parent="CustomButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="TitleText" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="PrimaryTextMediumDark" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextGrayDark</item>
    </style>

    <style name="PrimaryTextMediumLight" parent="PrimaryTextMediumDark">
        <item name="android:textColor">@color/colorTextGrayLight</item>
    </style>

    <style name="PrimaryTextSmallDark" parent="PrimaryTextMediumDark">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PrimaryTextBigDark" parent="PrimaryTextMediumDark">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
